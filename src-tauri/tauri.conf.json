{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sa-pc-exam-2",
  "version": "0.1.0",
  "identifier": "id.ppsdmmigas.sa.exampc",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sa-pc-exam-2",
        "width": 800,
        "height": 600,
        "contentProtected": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "$UPDATER_PUBLIC_KEY",
      "endpoints": [
        "$UPDATE_ENDPOINT"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
